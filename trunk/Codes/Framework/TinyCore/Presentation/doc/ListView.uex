  <doc for="ListView">
    <summary>
    Provides a simple list view control.
    </summary>
  </doc>

  <doc for="ListView.ListView">
    <summary>
    Initializes a new instance of the Microsoft.SPOT.ListView class.
    </summary>
  </doc>

  <doc for="ListView.CanScroll">
    <summary>
    Determines whether the list is larger than the screen size and is able to scroll up or down.
    </summary>
    <param name="fDown">true queries the down scroll status;  false queries the up scroll status.</param>
    <returns>true if the list is able to scroll;  otherwise, false.</returns>
  </doc>

  <doc for="ListView.OnScroll">
    <summary>
    Called when a scroll event occurs.
    </summary>
    <param name="fDown">Indicates if the list is to scroll down (true), or up (false).</param>
    <returns>The number of pixels scrolled.</returns>
  </doc>

  <doc for="ListView.Activate">
    <summary>
    Activates the view and gives it input focus.
    </summary>
  </doc>

  <doc for="ListView.SelectedItem">
    <summary>
    Gets the currently selected ListViewItem.
    </summary>
  </doc>

  <doc for="ListView.SelectedItemIndex">
    <summary>
    Gets or sets the currently selected item.
    </summary>
  </doc>

  <doc for="ListView.ApplyLayout">
    <summary>
    Applies current layout using the specified dimensions.
    </summary>
    <param name="left">The left x-coordinate.</param>
    <param name="top">The top y-coordinate.</param>
    <param name="width">The width of the view.</param>
    <param name="height">The height of the view.</param>
  </doc>

  <doc for="ListView.Items">
    <summary>
    Sets the view items in the list.
    </summary>
  </doc>

  <doc for="ListView.OnKey">
    <summary>
